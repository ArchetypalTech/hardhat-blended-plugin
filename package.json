{
  "name": "@fluentxyz/hardhat-compile-to-wasm",
  "version": "0.2.0",
  "description": "Hardhat plugin for seamless compilation of Rust contracts to WebAssembly (WASM), with integrated testing support for both Rust and Solidity. Part of the Fluent blockchain ecosystem.",
  "repository": "github:fluentlabs-xyz/hardhat-compile-to-wasm",
  "author": "Fluent Labs",
  "license": "MIT",
  "engines": {
    "node": ">=10",
    "pnpm": ">=3"
  },
  "main": "dist/src/index.js",
  "types": "dist/src/index.d.ts",
  "keywords": [
    "ethereum",
    "smart-contracts",
    "hardhat",
    "hardhat-plugin",
    "fluent",
    "wasm",
    "webassembly",
    "compile"
  ],
  "scripts": {
    "lint": "eslint . --ext .ts",
    "lint:fix": "eslint . --ext .ts --fix && prettier --write 'src/**/*.{js,ts}' 'test/**/*.{js,ts}'",
    "format": "prettier --write 'src/**/*.ts' 'test/**/*.ts'",
    "test": "mocha",
    "test:fixtures": "cd test/fixtures/basic && pnpm test",
    "test:all": "pnpm test && pnpm test:fixtures",
    "build": "tsc",
    "watch": "tsc -w",
    "clean": "rm -rf node_modules dist",
    "prepare": "pnpm run build",
    "preversion": "pnpm run test:all",
    "version:patch": "npm version patch",
    "version:minor": "npm version minor",
    "version:major": "npm version major",
    "postversion": "git push && git push --tags",
    "release": "pnpm run test:all && pnpm run build"
  },
  "devDependencies": {
    "@types/chai": "^4.3.16",
    "@types/fs-extra": "11.0.4",
    "@types/mocha": "^10.0.9",
    "@types/node": "22.9.0",
    "@types/sinon": "17.0.3",
    "@types/sinon-chai": "^3.2.12",
    "@typescript-eslint/eslint-plugin": "^8.14.0",
    "@typescript-eslint/parser": "^8.14.0",
    "chai": "^4.2.0",
    "chalk": "^4.1.2",
    "eslint": "^9.14.0",
    "eslint-config-prettier": "^9.1.0",
    "fs-extra": "11.2.0",
    "hardhat": "^2.22.15",
    "mocha": "11.0.0",
    "prettier": "^3.3.3",
    "sinon": "^18.0.0",
    "sinon-chai": "^3.7.0",
    "ts-node": "10.9.2",
    "typescript": "5.6.3",
    "@nomicfoundation/hardhat-ethers": "^3.0.0",
    "ethers": "^6.0.0"
  },
  "peerDependencies": {
    "hardhat": "2.22.15"
  }
}
