{
  "compilerOptions": {
    "target": "ES2017",
    "module": "commonjs",
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "outDir": "./dist",
    "strict": true,
    "rootDirs": ["./src", "./test"],
    "noImplicitAny": false,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@fluent.xyz/hardhat-plugin/*": ["src/*"]
    }
  },
  "exclude": ["dist", "node_modules", "examples", "fixtures"],
  "include": ["./test", "./src", ]
}
